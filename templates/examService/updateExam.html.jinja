{% extends 'base.html.jinja' %}

{% block titlePage %} Exams/Services Update {% endblock %}

{% block content %}
    <div class="form">
        <form method="POST">
            <div>
                <label for="examCode"> Exam/Service Code </label><br>
                <input type="text" name="examCode" 
                placeholder="000123"
                value="{{exam.code}}"
                class="input"
                required>
            </div>
            <br>
            <div>
                <label for="name"> Name </label>
                <br>
                <input type="text" name="name"
                placeholder="Name"
                class="input"
                value="{{exam.name}}"
                required>
            </div>
            <br>
            <div>
                <label for="category"> Category </label>
                <br>
                <select name='category'>
                    {% for category in categories %}
                        {% if category.name == exam.category%}
                            <option value='{{category._id}}' selected> {{category.name}} </option>
                        {% else %}
                            <option value='{{category._id}}'> {{category.name}} </option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <br>
            <div>
                <label for="sampleType"> Sample Type </label>
                <br>
                <input type="text" name="sampleType" 
                placeholder="type 1"
                class="input"
                value="{{exam.sampleType}}"
                required>
            </div>
            <br>
            <div>
                <label for="cost"> Cost </label>
                <br>
                <input type="number" name="cost" 
                min='0'
                step='0.01'
                class="input"
                value='{{exam.cost}}'
                required>
            </div>
            <br>
            <div>
                <label for="instruction"> Medical Instructions </label>
                <br>
                <select name='instruction'>
                    {% for instruction in instructionsList %}
                        {% if instruction.name == exam.medicalInstruction%}
                            <option value='{{instruction._id}}' selected> {{instruction.name}} </option>
                        {% else %}
                            <option value='{{instruction._id}}'> {{instruction.name}} </option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <br>
            <br>
            <input type="submit" value="Save" class="button">
            <div class="buttonLink">
                <a href="{{url_for('examListView')}}" class="label"> Exam/Service List <a/>
            <div>
        </form>
    </div>
{% endblock %}

{% block links %}
    <a href='/home'> Home </a>
    <br>
    <a href='/ExamsServices/List'> Exams/Services List </a>
{% endblock %}
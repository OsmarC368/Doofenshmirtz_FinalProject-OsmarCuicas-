{% extends 'base.html.jinja' %}

{% block titlePage %} AÃ±adir Materia {% endblock %}

{% block content %}

    <form method="POST">
            <div>
                <label for="examCode"> Exam/Service Code </label><br>
                <input type="text" name="examCode"
                value="{{exam.code}}"
                placeholder="000123">
            </div> 
            <br>
            <div>
                <label for="category"> Category </label>
                <br>
                <select name='category'>
                    {% for category in categories %}
                        {% if category.name == exam.category%}
                            <option value='{{category._id}}' selected> {{category.name}} </option>
                        {% else %}
                            <option value='{{category._id}}'> {{category.name}} </option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <br>
            <div>
                <label for="sampleType"> Sample Type </label>
                <br>
                <input type="text" name="sampleType"
                value="{{exam.sampleType}}"
                placeholder="type 1">
            </div>
            <br>
            <div>
                <label for="cost"> Cost </label>
                <br>
                <input type="text" name="cost" 
                value="{{exam.cost}}"
                placeholder="00.0">
            </div>
            <br>
            <div>
                <label for="instruction"> Medical Instructions </label>
                <br>
                <select name='instruction'>
                    {% for instruction in instructionsList %}
                        {% if instruction.name == exam.medicalInstruction%}
                            <option value='{{instruction._id}}' selected> {{instruction.name}} </option>
                        {% else %}
                            <option value='{{instruction._id}}'> {{instruction.name}} </option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <br>
            <br>
            <input type="submit" value="Submit">
        </form>
{% endblock %}

{% block links %}
    <a href='/home'> Home </a>
    <br>
    <a href='/ExamsServices/List'> Exams/Services List </a>
{% endblock %}